<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item >
    <shape
        android:shape="oval">
        <size
            android:width="120dp"
            android:height="120dp"/>
        <gradient
            android:angle="90"
            android:startColor="@color/app_color"
            android:endColor="@color/app_color_light"
            />
    </shape>
</item>
<item android:right="1dp" android:left="1dp" android:top="1dp">
    <shape
        android:shape="oval">
        <size
            android:width="120dp"
            android:height="120dp"/>

        <gradient
            android:angle="90"
            android:startColor="@color/white"
            android:endColor="@color/white"
            />
    </shape>
</item>
</layer-list>